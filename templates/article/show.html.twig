{% extends "base.html.twig" %}

{% block idBody %}showArticle{% endblock %}

{% block title %}{{ article.getName }}
{% endblock %}

{% block body %}
  {% if article.images is empty %}
    <div class="blocImage" style="background-image: url('{{ asset('images/article-show.jpg') }}');">
    {% else %}
      <div class="blocImage" style="{{ asset('images/produits/' ~ article.images[0].image) }}">
      {% endif %}
      <div class="title">
        <h1>{{ article.getName }}</h1>
      </div>
    </div>
    <div class="prerequis">
      <div class="containerPrerequis">
        <div>
          <h2>Difficulté</h2>
          <p>{{ article.getdifficulty }}
            /100</p>
        </div>
        <div>
          <h2>Temps estimé</h2>
          <p>{{ article.getestimatedTime }}h</p>
        </div>
      </div>
      <div class="ingredients">
        <h2>Ingrédients</h2 >
        {{ article.getingredients | raw }}
      </div>
      <svg class="wave waveTop fillWhite" viewbox="0 0 1440 120" aria-hidden="true">
        <path
          d="M1440,21.2101911 L1440,120 L0,120 L0,21.2101911 C120,35.0700637 240,42 360,42 C480,42 600,35.0700637 720,21.2101911 C808.32779,12.416393 874.573633,6.87702029 918.737528,4.59207306 C972.491685,1.8109458 1026.24584,0.420382166 1080,0.420382166 C1200,0.420382166 1320,7.35031847 1440,21.2101911 Z"></path>
      </svg>
    </div>

    <div class="conteneurEtapes">
      <h1>Explications par étapes</h1>
      <div class="etape">
        <p>{{ article.getSteps | raw }}</p>
      </div>
    </div>

  {% endblock %}
