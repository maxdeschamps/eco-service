{% extends "base.html.twig" %}

{% block title %}{{ article.getName }}{% endblock %}

{% block body %}
  <h1>{{ article.getName }}</h1>
  <p>Prix HT : {{ article.getPriceHt|number_format(2, ',', '.') }} €</p>
  <p>Prix TTC : {{ article.getPriceTtc|number_format(2, ',', '.') }} €</p>
  <p>{{ article.getContent }}</p>

  <a href="{{ path('index_article') }}">Retourner à la liste des articles</a>
{% endblock %}
